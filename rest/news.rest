@host = {{$dotenv SERVER_HOST}}
@token = {{$dotenv TOKEN_TEST}}

@contentType = application/json

@id = {{$dotenv ID_TEST}}

### Get all news
GET {{host}}news
x-access-token: {{token}}

### Get a new by id
GET {{host}}news/3
x-access-token: {{token}}

### Delete a news
DELETE {{host}}news/{{id}}
x-access-token: {{token}}

### Create a member
POST {{host}}news
x-access-token: {{token}}
Content-Type: {{contentType}}

